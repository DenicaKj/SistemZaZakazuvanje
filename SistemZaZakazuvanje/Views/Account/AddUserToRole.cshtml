@model SistemZaZakazuvanje.Models.AddToRoleModel

@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Add user to role</h2>
@using (Html.BeginForm("AddUserToRole", "Account"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group dropdown">
        @Html.DisplayName("Role")
        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control form-select-sm form-select" })
    </div>
    <br />
    <button type="submit" class="btn btn-default" style="border:solid 1px black">Save</button>
}

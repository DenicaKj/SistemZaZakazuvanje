@model IEnumerable<SistemZaZakazuvanje.Models.Usluga>

@{
    ViewBag.Title = "Index";


}

<h2>Prices</h2>

<p>
    @if (User.IsInRole("Administrator")) {
    <button class="btn btn-outline-secondary" style="background-color: #4C3138; color: white" onclick="location.href='@Url.Action("Create", "Uslugas")';return false;">Add New Serivce</button>
    }
</p>
    @foreach (var tip in ViewBag.tipovi)
    {
    <h3>@tip</h3>
    <div class="row" >
        @foreach (var item in Model)
        {


         if (tip == item.Tip)
         {
            <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                <div class="card text-white card-has-bg click-col" style="background-image:url('@item.imageUrl');">
                    <img class="card-img d-none" src="@item.imageUrl" alt="Goverment Lorem Ipsum Sit Amet Consectetur dipisi?">
                    <div class="card-img-overlay d-flex flex-column">
                        <div class="card-body">
                            
                            <h4 class="card-title mt-0 text-white">@item.Name</h4>
                            <h6 class="my-0 text-white d-block">Price: $@item.Price</h6>
                            <small><i class="far fa-clock"></i>Duration: @(item.Duration*60) min</small>
                        </div>
                        <div class="card-footer">
                            @if (User.IsInRole("Administrator"))
                            {
                                @Html.ActionLink("Edit", "Edit",null ,new { id = item.Id },new {style = "color: white" }); <span> | </span>
                                @Html.ActionLink("Delete", "Delete",null ,new { id = item.Id},
                   new { onclick = "return confirm('Are sure wants to delete this review?');", style = "color: white" });
                            }
                        </div>
                    </div>
                </div>
            </div>}
        }
    </div>
    }
@section Styles{
    <style>
        .container.body-content {
            padding-left: 40px;
        }
        .card {
            border: none;
            transition: all 500ms cubic-bezier(0.19, 1, 0.22, 1);
            overflow: hidden;
            border-radius: 20px;
            min-height: 250px;
            width: 350px;
            box-shadow: 0 0 12px 0 rgba(0,0,0,0.2);
            color: #554149;
        }

        .card-has-bg {
            transition: all 500ms cubic-bezier(0.19, 1, 0.22, 1);
            background-size: 120%;
            background-repeat: no-repeat;
            background-position: center center;
        }
        .card-has-bg:before{
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                bottom: 0;
                left: 0;
                background: inherit;
                -webkit-filter: grayscale(1);
                -moz-filter: grayscale(100%);
                
                filter: grayscale(100%);

                 }

        .card-has-bg:hover {
            transform: scale(0.98);
            box-shadow: 0 0 5px -2px rgba(0,0,0,0.3);
            background-size: 130%;
            transition: all 500ms cubic-bezier(0.19, 1, 0.22, 1);
        }
            .card-has-bg.card-img-overlay:hover {
                transition: all 800ms cubic-bezier(0.19, 1, 0.22, 1);
                background: rgb(243, 183, 198);
                background: linear-gradient(0deg, rgba(243, 183, 198,0.5) 0%, rgba(243, 183, 198,1) 100%);
            }
  

        .card-footer{
                background: none;
                border-top: none;
            }
        .card-meta{
                color:#26BD75}
        .card-body{
                transition: all 500ms cubic-bezier(0.19, 1, 0.22, 1);
        }
        :hover {
        cursor: pointer;
        transition: all 800ms cubic-bezier(0.19, 1, 0.22, 1);
        }
        .card-body:hover {
            margin-top: 30px;
            transition: all 800ms cubic-bezier(0.19, 1, 0.22, 1);
        }
        .card-img-overlay {
            transition: all 800ms cubic-bezier(0.19, 1, 0.22, 1);
            background: rgb(234, 130, 156);
            background: linear-gradient(0deg, rgba(234, 130, 156,0.2) 0%, rgba(234, 130, 156,1) 100%);
        }

    </style>
    
    }

@model IEnumerable<SistemZaZakazuvanje.Models.Review>

@{
    ViewBag.Title = "Reviews";
}

<h2>Reviews</h2>

<p>
    <button type="button" class="btn btn-outline-secondary" style="background-color: #4C3138; color: white;" onclick="location.href='@Url.Action("AddReview", "Home")';return false;">Add New Review</button>


</p>
@section Styles{
    <style>
        .card-horizontal {
            display: flex;
            flex: 1 1 auto;
        }
        .card {
            transition: all .2s ease-in-out;
        }
        .card:hover {
            transform: scale(1.05);
        }
    </style>
   
    
    }

@foreach (var item in Model)
{
    <div style="border-radius:30px" >
        <div class="row">
            <div class="col-12 mt-3" style="padding-left:100px;height:75%;">
                <div class="card" style=" border-radius: 30px;width:92%;align-self:center">
                    <div class="card-horizontal">
                        <div class="img-square-wrapper">
                            @{
                                if (item.ImageUrl == "No image")
                                {
                                    <img style="border-radius: 30px; border-bottom-left-radius: 0px" class="" width="150" height="150" src="data:image/png;base64," alt="Card image cap">
                                    
                                }
                                else
                                {
                                    <img src="~/images/@item.ImageUrl" style="border-radius: 30px; border-bottom-left-radius: 0px" alt="Kulu" width="150" height="150" />
                                }
                            }
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">@item.UserName</h4>
                            <p class="card-text">@item.Description</p>
                        </div>
                    </div>
                    <div class="card-footer" style="border-bottom-right-radius:30px;border-bottom-left-radius:30px">
                        <small>
                            @if (ViewBag.userId == item.UserId)
                            {
                                <a style="text-decoration:none;margin-right:10px" href="@Url.Action("EditReview", "Home", new { id = item.Id })">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                    </svg>
                                </a>
                                <span> </span>
                                <a style="text-decoration:none" href="@Url.Action("DeleteReview", "Home", new { id = item.Id })" onclick = "return confirm('Are sure wants to delete this review?');" >
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                    </svg>
                                </a>
                               
                            }
                            @if (User.IsInRole("Administrator"))
                            {
                                <a style="text-decoration:none" href="@Url.Action("DeleteReview", "Home", new { id = item.Id, onclick = "return confirm('Are sure wants to delete this review?');" })">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                    </svg>
                                </a>
                            }

                        <a style="text-decoration:none;float:right" href="@Url.Action("ListComments", "Home", new { id = item.Id})">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-chat-right-text" viewBox="0 0 16 16">
                                <path d="M2 1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h9.586a2 2 0 0 1 1.414.586l2 2V2a1 1 0 0 0-1-1H2zm12-1a2 2 0 0 1 2 2v12.793a.5.5 0 0 1-.854.353l-2.853-2.853a1 1 0 0 0-.707-.293H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12z" />
                                <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z" />
                            </svg>
                        </a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

}



@model SistemZaZakazuvanje.Models.Review

@{
    ViewBag.Title = "ListComments";
}

<h2>Comments</h2>
<p>
    <button type="button" class="btn btn-outline-secondary" style="background-color: #4C3138; color: white;" onclick="location.href='@Url.Action("Reviews", "Home")';return false;">Back to Reviews</button>


</p>
<div style="border-radius:30px">
    <div class="row">
        <div class="col-12 mt-3" style="padding-left:100px;height:75%;">
            <div class="card" style=" border-radius: 30px;width:92%;align-self:center;">
                <div class="card-horizontal">
                    <div class="img-square-wrapper">
                        @{
                            if (Model.ImageUrl == "No image")
                            {
                                <img style="border-radius: 30px; border-bottom-left-radius: 0px" class="" width="150" height="150" src="data:image/png;base64," alt="Card image cap">
                            }
                            else
                            {
                                <img src="~/images/@Model.ImageUrl" style="border-radius: 30px; border-bottom-left-radius: 0px" alt="Kulu" width="150" height="150" />
                            }
                        }
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.UserName</h4>
                        <p class="card-text">@Model.Description</p>
                    </div>
                </div>
                <div class="card-footer" style="border-bottom-right-radius:30px;border-bottom-left-radius:30px">
                    <small>
                        <a style="text-decoration:none;float:right" href="@Url.Action("AddComment", "Home", new { id = Model.Id})">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
                                <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0z" />
                            </svg>
                        </a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
@foreach (var item in ViewBag.comments)
{
    <div style="border-radius:30px">
        <div class="row">
            <div class="col-12 mt-3" style="padding-left:100px;height:75%;">
                <div class="card" style=" border-radius: 30px;width:92%;align-self:center">
                    <div class="card-horizontal">
                        <div class="card-body">
                            <h4 class="card-title">@item.UserName</h4>
                            <p class="card-text">@item.Description</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

@section Styles{
    <style>
        .card-horizontal {
            display: flex;
            flex: 1 1 auto;
        }

        .card {
            transition: all .2s ease-in-out;
        }

            .card:hover {
                transform: scale(1.05);
            }
    </style>


}